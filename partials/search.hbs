{{^if enabled_search}}
<div id="search" class="search-section">
	<span id="search-close" class="search-close">{{>icons/site/close}}</span>
	<div id="search-content" class="search-content">
		<form class="search-form" onsubmit="return false">
			<input id="search-input" class="global-title-big" type="text" placeholder="{{t "Type your keywords"}}">
			<div class="search-meta">
				<span id="search-info">{{t "Please enter at least 3 characters"}}</span>
				<span id="search-counter" class="is-hide">
					<span id="search-counter-results">0</span>
					{{t "Results for your search"}}
				</span>
			</div>
		</form>
		<div id="search-results" class="search-results"></div>
	</div>
	<div id="search-overlay" class="search-overlay">
		{{#is "post,page,author,tag"}}
		{{{block "background_cover"}}}
		{{else}}
		{{>images/background_cover background_cover=@site.cover_image}}
		{{/is}}
	</div>
</div>
{{else}}
<span id="search-open">{{>icons/site/search}}</span>
{{#contentFor "search_js"}}
<script>
const searchAPI='{{@site.url}}/ghost/api/v4/content/posts/?key='+{{>search_api_key}}+'&limit=all&fields=url,title,published_at,custom_excerpt,visibility,html';
</script>
{{/contentFor}}
{{/if}}