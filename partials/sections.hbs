<div class="special-section">
	<div class="global-title-wrap">
		
		{{! Title }}
		<h3 class="global-title-medium">{{{t "Personal {start-italic}growth.{end-italic}" start-italic="<span>" end-italic="</span>"}}}</h3>

		{{! Link }}
		<a href="{{@site.url}}/growth/" aria-label="Link to the collection">{{>icons/site/arrow_right}}</a>

	</div>
	<div class="special-wrap">

		{{! Posts }}

		{{#get "posts" limit="4" filter="tag:travel" include="tags"}}
		{{#foreach posts}}
		{{>item section_item=true show_tags=true}}
		{{/foreach}}
		{{/get}}
	</div>
</div>

